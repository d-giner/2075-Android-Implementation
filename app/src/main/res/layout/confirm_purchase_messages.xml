<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_rounded_border_solidwhite"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/warningImage"
            android:layout_width="116dp"
            android:layout_height="87dp"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:src="@drawable/coins"/>

        <TextView
            android:id="@+id/warningtTxt1"
            android:fontFamily="@font/press_start_2p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/SpacialOrange"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:text="Do you want to purchase?"
            android:textStyle="bold"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/warningtTxt2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/press_start_2p"
            android:gravity="center"
            android:text="Stat improvements"
            android:textColor="@android:color/black"
            android:textSize="11sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/yesButton"
                android:text="Yes"
                android:fontFamily="@font/press_start_2p"
                android:textSize="12sp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:background="@drawable/button_rounded_cian"/>

            <Button
                android:id="@+id/noButton"
                android:text="No"
                android:fontFamily="@font/press_start_2p"
                android:textSize="12sp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:background="@drawable/button_rounded_red"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>



